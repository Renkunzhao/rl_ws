{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "List env",
            "type": "shell",
            "command": "/workspace/isaaclab/_isaac_sim/python.sh scripts/rsl_rl/list_envs.py",
            "options": {
                "cwd": "${workspaceFolder}/src/unitree_rl_lab"
            },
            "group": "train",
            "problemMatcher": []
        },

        // G1
        {
            "label": "Train G1 unitree_rl_lab",
            "type": "shell",
            "command": "/workspace/isaaclab/_isaac_sim/python.sh scripts/rsl_rl/train.py --headless --task Unitree-G1-29dof-Velocity",
            "options": {
                "cwd": "${workspaceFolder}/src/unitree_rl_lab"
            },
            "group": "train",
            "problemMatcher": []
        },
        {
            "label": "Run G1 Simulation",
            "type": "shell",
            "command": "./unitree_mujoco -i 0 -n lo -r g1 -s scene_29dof_terrain.xml",
            "options": {
                "cwd": "${workspaceFolder}/src/unitree_mujoco/simulate/build"
            },
            "group": "simulation",
            "problemMatcher": []
        },
        {
            "label": "Run G1 Control",
            "type": "shell",
            "command": "./g1_ctrl -n lo",
            "options": {
                "cwd": "${workspaceFolder}/src/unitree_rl_lab/deploy/robots/g1_29dof/build"
            },
            "group": "control",
            "problemMatcher": []
        },
        {
            "label": "Train G1 mujoco_playground rsl_rl",
            "type": "shell",
            // "command": "source .venv/bin/activate; ../.venv/bin/python train_rsl_rl.py --env_name=G1JoystickRoughTerrain",
            "command": "source ../.venv/bin/activate; ../.venv/bin/python train_rsl_rl.py --env_name=G1JoystickRoughTerrain --load_run_name G1JoystickRoughTerrain-20251003-192828 --checkpoint_num 650",
            "options": {
                "cwd": "${workspaceFolder}/src/mujoco_playground/learning/"
            },
            "group": "train",
            "problemMatcher": []
        },
        {
            "label": "Play G1 mujoco_playground",
            "type": "shell",
            // "command": "source .venv/bin/activate; ../.venv/bin/python train_rsl_rl.py --env_name=G1JoystickRoughTerrain",
            "command": "source ../.venv/bin/activate; ../.venv/bin/python train_rsl_rl.py --env_name=G1JoystickRoughTerrain --play_only --load_run_name G1JoystickRoughTerrain-20251004-000055",
            "options": {
                "cwd": "${workspaceFolder}/src/mujoco_playground/learning/"
            },
            "group": "play",
            "problemMatcher": []
        },
        {
            "label": "Train G1 mujoco_playground jax_ppo",
            "type": "shell",
            "command": "source ../.venv/bin/activate; ../.venv/bin/python train_jax_ppo.py --env_name=G1JoystickRoughTerrain",
            "options": {
                "cwd": "${workspaceFolder}/src/mujoco_playground/learning/"
            },
            "group": "train",
            "problemMatcher": []
        },
        {
            "label": "Play G1 mujoco_playground jax_ppo",
            "type": "shell",
            "command": "source ../.venv/bin/activate; ../.venv/bin/python train_jax_ppo.py --env_name=G1JoystickRoughTerrain --play_only --load_checkpoint_path=G1JoystickRoughTerrain-20251005-192648/checkpoints/",
            "options": {
                "cwd": "${workspaceFolder}/src/mujoco_playground/learning/"
            },
            "group": "play",
            "problemMatcher": []
        },

        // Go2
        {
            "label": "Run Go2 Simulation",
            "type": "shell",
            "command": "./unitree_mujoco -i 0 -n lo -r go2 -s scene_terrain.xml",
            "options": {
                "cwd": "${workspaceFolder}/src/unitree_mujoco/simulate/build"
            },
            "group": "simulation",
            "problemMatcher": []
        },
        {
            "label": "Run Go2 Control",
            "type": "shell",
            "command": "./go2_ctrl -n lo",
            "options": {
                "cwd": "${workspaceFolder}/src/unitree_rl_lab/deploy/robots/go2/build"
